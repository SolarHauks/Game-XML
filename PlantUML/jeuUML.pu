            + void Draw()
        }
        
        class ShopMenu {
            + ShopMenu()
            + void Update(Player player)
        }
    
    }
    
    package http://www-univ-grenoble-alpes-fr/jeu/shop {
    
        class ShopKeeper {
            - readonly ShopMenu _shopMenu
            - readonly Player _player
