            + void DeplacementVertical(double dt)
            + void Animate(Vector2 velocity)
            + void TakeDamage(List<Enemy> enemies)
            + void TakeDamage(int damage)
            + void Draw(Vector2 offset)
            + void Respawn()
        }
    
    }
    

